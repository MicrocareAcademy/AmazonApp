
@{
    ViewData["Title"] = "EditProduct";
}


@{
    Layout = "_Layout";
}

<form method="post" action="/Inventory/Product/UpdateProduct">
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" class="form-control"
               id="Name" name="Name" placeholder="Enter Product Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="Id">Product Id</label>
        <input type="number" class="form-control"
               id="Id" name="Id" placeholder="Enter Product ID" value="@Model.Id">
    </div>
    <div class="form-group">
        <label for="Category">Mobile No</label>
        <input type="text" class="form-control"
               id="Category" name="Category" placeholder="Enter Category" value="@Model.Category">
    </div>
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Update Product</button>
</form>


